# ===========================================
# SuperCaller Configuration
# ===========================================
# Copy this file to .env and fill in your values.

# --- SignalWire ---
SIGNALWIRE_PROJECT_ID=your-project-id
SIGNALWIRE_TOKEN=your-api-token
SIGNALWIRE_SPACE=your-space-name
SIGNALWIRE_PHONE_NUMBER=+1XXXXXXXXXX
NOTIFY_PHONE_NUMBER=+1XXXXXXXXXX

# --- Server ---
HOST=0.0.0.0
PORT=8080
# Public hostname for WebSocket URL (e.g. Tailscale Funnel, Cloudflare Tunnel, ngrok)
PUBLIC_HOST=your-public-hostname.example.com

# --- STT (Faster-Whisper) ---
STT_MODEL=medium.en
STT_DEVICE=cuda
STT_COMPUTE_TYPE=float16

# --- LLM (OpenAI-compatible, e.g. LM Studio) ---
LLM_BASE_URL=http://127.0.0.1:1234/v1
LLM_MODEL=zai-org/glm-4.7-flash
LLM_MAX_TOKENS=200
LLM_TEMPERATURE=0.7

# --- TTS (Chatterbox Turbo) ---
# Hugging Face token (required to download Chatterbox Turbo model). Get one at https://huggingface.co/settings/tokens
HF_TOKEN=
# Path to a WAV file (>5s) for voice cloning, or leave empty for default voice
TTS_VOICE_PROMPT=

# --- VAD ---
VAD_SILENCE_THRESHOLD_MS=800
VAD_ENERGY_THRESHOLD=0.01

# --- Owner ---
OWNER_NAME=
